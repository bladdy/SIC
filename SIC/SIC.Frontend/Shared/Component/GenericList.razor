@typeparam Titem

@if (MyList is null)
{
    @if (Loading is null)
    {

        <div class="d-flex justify-content-center align-items-center h-100">
            <Loading />
        </div>

    }
    else
    {
        @Loading
    }

}
else if(MyList.Count == 0)
{
    @if (NoRecords is null)
    {

        <p>No hay registro que mostrar</p>

    }
    else
    {
        @NoRecords
    }
}
else
{
    @Body
}

