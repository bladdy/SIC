@page "/users/create"
<h3>Crear Usuario</h3>

<EditForm Model="@user" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Documento</label>
        <InputText class="form-control" @bind-Value="user.Document" />
    </div>

    <div class="mb-3">
        <label>Nombres</label>
        <InputText class="form-control" @bind-Value="user.FirstName" />
    </div>

    <div class="mb-3">
        <label>Apellidos</label>
        <InputText class="form-control" @bind-Value="user.LastName" />
    </div>

    <div class="mb-3">
        <label>Correo electrónico</label>
        <InputText class="form-control" @bind-Value="user.Email" />
    </div>

    <div class="mb-3">
        <label>Teléfono</label>
        <InputText class="form-control" @bind-Value="user.PhoneNumber" />
    </div>

    <div class="mb-3">
        <label>Dirección</label>
        <InputText class="form-control" @bind-Value="user.Address" />
    </div>

    <!-- Tipo de usuario -->
    <div class="mb-3">
        <label>Tipo de usuario</label>
        <InputSelect class="form-select" @bind-Value="user.UserType" >
            <option value="0">-- Selecciona un tipo de Usuario --</option>
            @foreach (var tipo in Enum.GetValues<UserType>())
            {
                <option value="@tipo">@tipo.GetDescription()</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => user.UserType)" />
    </div>

    <div class="mb-3">
        <label>Contraseña</label>
        <InputText class="form-control" @bind-Value="user.Password" type="password"/>
        <ValidationMessage For="@(() => user.Password)" />
    </div>
    <div class="mb-3">
        <label>Confirmar Contraseña</label>
        <InputText class="form-control" @bind-Value="user.PasswordConfirm" type="password" />
        <ValidationMessage For="@(() => user.PasswordConfirm)" />
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-custom" type="submit">Guardar</button>
        <button class="btn btn-secondary" @onclick="NavigateToBack">Cancelar</button>
    </div>
</EditForm>


