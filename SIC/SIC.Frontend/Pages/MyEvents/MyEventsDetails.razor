@page "/my-events/details/{Code}"

<!--
<h3 class="mb-2">Detalle del Evento</h3>-->

@if (EventDetail is null)
{
    <div class="alert alert-info">Cargando evento...</div>
}
else
{
    <div class="card shadow-lg border-0 rounded-3 mb-2">
        <!-- Header: título, subtítulo, código, ID, tipo y estado -->
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-start flex-wrap">
                <div>
                    <h4 class="mb-0">@EventDetail.Name</h4>
                    <small>@EventDetail.SubTitle</small>
                </div>
                <div class="text-start">                    
                    <p class="mb-1"><strong>Tipo:</strong> @EventDetail.EventType?.Name</p>
                    <p class="mb-0">
                        <strong>Estado:</strong>
                        <span class="badge bg-@(EventDetail.Status == Status.Active ? "success" : "secondary")">
                            @EventDetail.Status.GetDescription()
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Body: resto de la información -->
        <div class="card-body">
            <div class="row">
                <!-- Columna 1 -->
                <div class="col-md-4 mb-1">
                    <p><strong>Fecha:</strong> @EventDetail.Date.ToString("dd/MM/yyyy")</p>
                    <p><strong>Hora:</strong> @DateTime.Today.Add(EventDetail.Time).ToString("hh:mm tt")</p>
                    <p><strong>Ubicación:</strong> <a href="@EventDetail.Url" target="_blank">@EventDetail.Url</a></p>
                </div>

                <!-- Columna 2 -->
                <div class="col-md-4 mb-1">
                    <p><strong>Host:</strong> @EventDetail.Host (@EventDetail.HostPhone)</p>
                    <p>
                        <strong>Planner:</strong>
                        @if (!string.IsNullOrEmpty(EventDetail.Planner))
                        {
                            @($"{EventDetail.Planner} ({EventDetail.PlannerPhone})")
                        }
                        else
                        {
                            <em>No asignado</em>
                        }
                    </p>
                </div>

                <!-- Columna 3: puedes agregar más detalles si deseas -->
                <div class="col-md-4 mb-1">
                    <p><strong>Invitados:</strong> 100</p>
                    <p><strong>Confirmados:</strong> 67</p>
                    <p><strong>Pendientes:</strong> 33</p>
                    <p><strong>Adultos:</strong> 33</p>
                    <p><strong>Niños:</strong> 67</p>
                </div>
            </div>
        </div>
        <!--Footer: botones-->
        <div class="card-footer d-flex justify-content-end gap-2">
            <button class="btn btn-sm btn-danger">
                Exportar Excel
            </button>
            <button class="btn btn-sm btn-danger">
                Cargar Lista de Invitados
            </button>
            <button class="btn btn-sm btn-danger">
                Agregar Invitado
            </button>
            <button class="btn btn-sm btn-danger">
                Scan QR
            </button>
        </div>

    </div>


    <h4 class="mb-2">Lista de Invitados</h4>

    @if (AreAllSelected)
    {
        <div class="mb-3 d-flex gap-2">
            <button class="btn btn-sm btn-primary">
                Invitar a Todos
            </button>
            <button class="btn btn-sm btn-secondary">
                Enviar Recordatorio
            </button>
        </div>
    }

    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>
                    <input type="checkbox" @onchange="ToggleSelectAll" checked="@AreAllSelected" />
                </th>
                <th>Nombre</th>
                <th>Móvil</th>
                <th>Adultos</th>
                <th>Niños</th>
                <th>Confirmados Adultos</th>
                <th>Confirmados Niños</th>
                <th>Mesa</th>
                <th>Email</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var guest in Guests)
            {
                <tr>
                    <td>
                        <input type="checkbox" @bind="guest.IsSelected" />
                    </td>
                    <td>@guest.Name</td>
                    <td>@guest.Mobile</td>
                    <td>@guest.Adults</td>
                    <td>@guest.Children</td>
                    <td>@guest.ConfirmedAdults</td>
                    <td>@guest.ConfirmedChildren</td>
                    <td>@guest.Table</td>
                    <td>@guest.Email</td>
                    <td>
                        <span class="badge bg-@(guest.Status == "Confirmado" ? "success" : guest.Status == "Pendiente" ? "warning" : "secondary")">
                            @guest.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>



    @*@if (EventDetail.Participants is not null && EventDetail.Participants.Any())
    {
        <ul class="list-group">
            @foreach (var p in EventDetail.Participants)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @p.Name
                    <span class="badge bg-primary rounded-pill">@p.Role</span>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No hay participantes registrados.</p>
    }*@
}
