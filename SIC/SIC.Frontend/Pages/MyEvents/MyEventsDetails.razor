@page "/my-events/details/{Code}"

<!--
<h3 class="mb-2">Detalle del Evento</h3>-->

@if (EventDetail is null)
{
    <div class="alert alert-info">Cargando evento...</div>
}
else
{
    <div class="card shadow-lg border-0 rounded-3 mb-2">
        <!-- Header: título, subtítulo, código, ID, tipo y estado -->
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-start flex-wrap">
                <div>
                    <h4 class="mb-0">@EventDetail.Name</h4>
                    <small>@EventDetail.SubTitle</small>
                </div>
                <div class="text-start">                    
                    <p class="mb-1"><strong>Tipo:</strong> @EventDetail.EventType?.Name</p>
                    <p class="mb-0">
                        <strong>Estado:</strong>
                        <span class="badge bg-@(EventDetail.Status == Status.Active ? "success" : "secondary")">
                            @EventDetail.Status.GetDescription()
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Body: resto de la información -->
        <div class="card-body">
            <div class="row">
                <!-- Columna 1 -->
                <div class="col-md-4 mb-1">
                    <p><strong>Fecha:</strong> @EventDetail.Date.ToString("dd/MM/yyyy")</p>
                    <p><strong>Hora:</strong> @DateTime.Today.Add(EventDetail.Time).ToString("hh:mm tt")</p>
                    <p><strong>Ubicación:</strong> <a href="@EventDetail.Url" target="_blank">@EventDetail.Url</a></p>
                </div>

                <!-- Columna 2 -->
                <div class="col-md-4 mb-1">
                    <p><strong>Host:</strong> @EventDetail.Host (@EventDetail.HostPhone)</p>
                    <p>
                        <strong>Planner:</strong>
                        @if (!string.IsNullOrEmpty(EventDetail.Planner))
                        {
                            @($"{EventDetail.Planner} ({EventDetail.PlannerPhone})")
                        }
                        else
                        {
                            <em>No asignado</em>
                        }
                    </p>
                </div>

                <!-- Columna 3: puedes agregar más detalles si deseas -->
                <div class="col-md-4 mb-1">
                    <p><strong>Invitados:</strong> s</p>
                    <p><strong>Confirmados:</strong> 967</p>
                    <p><strong>Pendientes:</strong> 33</p>
                    <p><strong>Adultos:</strong> 33</p>
                    <p><strong>Niños:</strong> 67</p>
                </div>
            </div>
        </div>
        <!--Footer: botones-->
        <div class="card-footer d-flex justify-content-end gap-2">
            <button class="btn btn-sm btn-danger">
                Exportar Excel
            </button>
            <button class="btn btn-sm btn-danger">
                Cargar Lista de Invitados
            </button>
            <button class="btn btn-sm btn-danger">
                Agregar Invitado
            </button>
            <button class="btn btn-sm btn-danger">
                Scan QR
            </button>
        </div>

    </div>


    <h4 class="mb-2">Lista de Invitados</h4>

    <!--<Filter PlaceHolder="Buscar Invitacion..." Callback=@FilterCallBack />-->
    ﻿﻿<div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
        <input style="width:400px;" type="text" class="form-control" placeholder="Buscar Invitacion..." @bind-value="Filter">
        <button type="button" class="btn btn-outline-primary mx-1" @onclick="ApplyFilterAsync"><i class="bi bi-funnel" /> Filtrar</button>
        <button type="button" class="btn btn-outline-danger" @onclick="CleanFilterAsync"><i class="bi bi-x-circle" /> Limpiar</button>
    </div>



    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>
                    <input type="checkbox" checked="@false" />
                </th>
                <th>Nombre</th>
                <th>Móvil</th>
                <th>Adultos</th>
                <th>Niños</th>
                <th>Confirmados Adultos</th>
                <th>Confirmados Niños</th>
                <th>Mesa</th>
                <th>Email</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var invitation in Invitations!)
            {
                <tr>
                    <td>
                        <input type="checkbox" />
                    </td>
                    <td>@invitation.Name</td>
                    <td>@invitation.PhoneNumber</td>
                    <td>@invitation.NumberAdults</td>
                    <td>@invitation.NumberChildren</td>
                    <td>@invitation.NumberConfirmedAdults</td>
                    <td>@invitation.NumberConfirmedChildren</td>
                    <td>@invitation.Table</td>
                    <td>@invitation.Email</td>
                    <td>
                        <span class="badge bg-@(invitation.Status == Status.Confirmed ? "success" : invitation.Status == Status.Pending ? "warning" : "secondary")">
                            @invitation.Status.GetDescription()
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center my-3">
        <Pagination CurrentPage="currentPage"
                    TotalPages="totalPages"
                    SelectedPage="SelectedPageAsync" />

    </div>
}
