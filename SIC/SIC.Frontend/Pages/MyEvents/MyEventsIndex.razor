@page "/my-events"
<h3 class="mb-4">Mis Eventos</h3>

<div class="mb-3">
    <button class="btn btn-custom" @onclick="ShowCreateModal">
        Crear Evento
    </button>
</div>
<div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center; gap: 10px;">
    <!-- Buscar por texto -->
    <input style="width:400px;" type="text" class="form-control" placeholder="Buscar Evento..." @bind="Filter" />

    <!-- Fecha -->
    <InputDate class="form-control" @bind-Value="DateSelectd" style="width:150px;" />

    <!-- Tipo de Evento -->
    <InputSelect class="form-select" @bind-Value="SelectedEventType" style="width:300px;">
        <option value="">-- Selecciona un tipo de Evento --</option>
        @if (EventTypes != null)
        {
            @foreach (var type in EventTypes)
            {
                <option value="@type.Id">@type.Name</option>
            }
        }
    </InputSelect>

    <!-- Orden -->
    <InputSelect class="form-select" @bind-Value="OrderBy" style="width:200px;">
        <option value="">-- Ordernar por --</option>
        <option value="FechaAsc">Fecha Ascendente </option>
        <option value="FechaDesc">Fecha Descendente</option>
        <option value="Nombre">Nombre Alfabetico</option>
        <option value="Evento">Tipo de Evento</option>
        <option value="Estado">Estado</option>
    </InputSelect>

    <!-- Botones -->
    <button type="button" class="btn btn-custom mx-1" @onclick="ApplyFilterAsync">
        <i class="bi bi-funnel" /> Filtrar
    </button>
    <button type="button" class="btn btn-custom" @onclick="CleanFilterAsync">
        <i class="bi bi-x-circle" /> Limpiar
    </button>
</div>

<GenericList MyList="Events">
    <Body>
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead style="color: white; background-color: #3C6A79;">
                <tr class="text-center">
                    <th>Codigo</th>
                    <th>Título</th>
                    <th>Sub-Título</th>
                    <th>Evento</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Url</th>
                    <th>Anfitrión</th>
                    <th>Teléfono</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Events != null && Events.Any())
                {
                    @foreach (var even in Events)
                    {
                        <tr class="align-middle">
                            <td>
                                <a href="/my-events/details/@even.Code">
                                    @even.Code
                                </a>
                            </td>
                            <td>@even.Name</td>
                            <td>@even.SubTitle</td>
                            <td>@even.EventType!.Name</td>
                            <td>@even.Date.ToString("dd/MM/yyyy")</td>
                            <td>@DateTime.Today.Add(even.Time).ToString("hh:mm tt")</td>
                            <td>
                                <a href="@even.Url" target="_blank">
                                    <i class="bi bi-link-45deg">Invitacion</i>
                                </a>
                            </td>
                            <td>@even.Host</td>
                            <td>@even.HostPhone</td>
                            <td>@even.Status.GetDescription()</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-custom me-2" @onclick="() => ShowEditModal(even)">
                                    <i class="bi bi-pencil-fill"></i>
                                </button>
                                <button class="btn btn-sm btn-custom" @onclick="() => ConfirmDelete(even)">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted">No hay eventos registrados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>
<!-- paginacion-->
<div class="d-flex justify-content-center my-3">
    <Pagination CurrentPage="currentPage"
                TotalPages="totalPages"
                SelectedPage="SelectedPageAsync" />
</div>

<!-- Modal -->
@if (IsModalVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @((IsEditMode ? $"Editar Evento: {@NewEvent.Code}" : "Crear Evento"))
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@NewEvent" OnValidSubmit="@SaveEvent">
                        <DataAnnotationsValidator />
                        <ValidationSummary />


                        <div class="mb-3">
                            <label class="form-label">Título</label>
                            <InputText class="form-control" @bind-Value="NewEvent.Name" />
                            <ValidationMessage For="@(() => NewEvent.Name)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Sub-Título</label>
                            <InputText class="form-control" @bind-Value="NewEvent.SubTitle" />
                            <ValidationMessage For="@(() => NewEvent.SubTitle)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tipo de Evento</label>
                            <InputSelect class="form-select" @bind-Value="NewEvent.EventTypeId">
                                <option value="">-- Selecciona un tipo de Evento --</option>
                                @if (EventTypes != null)
                                {
                                    @foreach (var type in EventTypes)
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => NewEvent.EventTypeId)" />
                        </div>
                        <div class=" mb-3 row">
                            <div class="col-auto">
                                <label class="form-label">Fecha</label>
                                <InputDate class="form-control" @bind-Value="NewEvent.Date" />
                                <ValidationMessage For="@(() => NewEvent.Date)" />
                            </div>

                            <div class="col-auto">
                                <label class="form-label">Hora</label>
                                <InputTime CssClass="form-control" @bind-Value="NewEvent.Time" />
                            </div>

                        </div>

                        <div class="mb-3">
                            <label class="form-label">URL</label>
                            <InputText class="form-control" @bind-Value="NewEvent.Url" />
                        </div>
                        <div class=" mb-3 row">

                            <div class="col-auto">
                                <label class="form-label">Anfitrión</label>
                                <InputText class="form-control" @bind-Value="NewEvent.Host" />
                            </div>

                            <div class="col-auto">
                                <label class="form-label">Teléfono Anfitrión</label>
                                <InputText class="form-control" @bind-Value="NewEvent.HostPhone" />
                            </div>
                        </div>
                        <div class=" mb-3 row">
                            <div class="col-auto">
                                <label class="form-label">Planner</label>
                                <InputText class="form-control" @bind-Value="NewEvent.Planner" />
                            </div>

                            <div class="col-auto">
                                <label class="form-label">Teléfono Planner</label>
                                <InputText class="form-control" @bind-Value="NewEvent.PlannerPhone" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Estado</label>
                            <InputSelect class="form-select" @bind-Value="NewEvent.Status">
                                <option value="">-- Selecciona un Estado --</option>
                                @foreach (var status in Enum.GetValues<Status>())
                                {
                                    <option value="@status">@status.GetDescription()</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => NewEvent.Status)" />
                        </div>
                        <!--Inhabilitar los botones hasta que termine de enviar-->
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-custom">
                                Guardar
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                Cancelar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

