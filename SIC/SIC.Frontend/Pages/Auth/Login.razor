

@page "/login"
<!--PRIMARY 3C6A79 -->
<!--SECONDARY CEC5B8 -->
<!-- F2EBD9 -->
<div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 500px; width: 100%;">
        <div class="card-body p-5 text-center">
            <!-- Logo -->
            <div class="mb-4">
                <img src="logo_SIC.jpeg" alt="Logo" class="mb-3" style="width: 100px; height: 100px; border-radius: 50%;" />

                <h3 class="fw-bold" style="color:#3C6A79;">Sistema invitación y confirmación</h3>
                <p class="text-muted small">Inicia sesión para continuar</p>
            </div>

            <EditForm Model="loginDTO" OnValidSubmit="LoginAsync">
                <DataAnnotationsValidator />

                <div class="mb-3 text-start">
                    <label class="form-label fw-semibold text btn-">Usuario</label>
                    <InputText class="form-control form-control-lg rounded-3" @bind-Value="@loginDTO.Email" placeholder="00000000000" />
                    <ValidationMessage For="@(() => loginDTO.Email)" />
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label fw-semibold">Contraseña</label>
                    <InputText type="password" class="form-control form-control-lg rounded-3" @bind-Value="@loginDTO.Password" placeholder="••••••••" />
                    <ValidationMessage For="@(() => loginDTO.Password)" />
                </div>

                <button class="btn w-100 py-2 rounded-3 fw-semibold btn-custom" type="submit">
                    Iniciar Sesión
                </button>

                <div class="mt-4 visually-hidden">
                    <a class="text-decoration-none d-block mb-1" href="/RecoverPassword">¿Olvidaste tu contraseña?</a>
                    <a class="text-decoration-none d-block mb-1" href="/ResendToken">Reenviar correo de activación</a>
                    <a class="text-decoration-none d-block" href="/Register">¿No tienes cuenta? <strong>Regístrate aquí</strong></a>
                </div>
            </EditForm>
        </div>
    </div>
</div>
