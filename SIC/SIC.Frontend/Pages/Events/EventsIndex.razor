@page "/events"


<h3 class="mb-4">Eventos</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        Crear Evento
    </button>
</div>

<GenericList MyList="Events">
    <Body>
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>Codigo</th>
                    <th>Título</th>
                    <th>Sub-Título</th>
                    <th>Evento</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Url</th>
                    <th>Anfitrión</th>
                    <th>Teléfono</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Events != null && Events.Any())
                {
                    @foreach (var even in Events)
                    {
                        <tr class="align-middle">
                            <td>@even.Code</td>
                            <td>@even.Name</td>
                            <td>@even.SubTitle</td>
                            <td>@even.EventType.Name</td>
                            <td>@even.Date.ToString("dd/MM/yyyy")</td>
                            <td>@DateTime.Today.Add(even.Time).ToString("hh:mm tt")</td>
                            <td>
                                <a href="@even.Url" target="_blank">
                                    <i class="bi bi-link-45deg">Invitacion</i>
                                </a>
                            </td>
                            <td>@even.Host</td>
                            <td>@even.HostPhone</td>
                            <td>@even.Status</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => ShowEditModal(even)">
                                    <i class="bi bi-pencil-fill"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(even)">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted">No hay eventos registrados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>

<!-- Modal -->
@if (IsModalVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((IsEditMode ? "Editar Evento" : "Crear Evento"))</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@NewEvent" OnValidSubmit="@SaveEvent">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Título</label>
                            <InputText class="form-control" @bind-Value="NewEvent.Name" />
                            <ValidationMessage For="@(() => NewEvent.Name)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Sub-Título</label>
                            <InputText class="form-control" @bind-Value="NewEvent.SubTitle" />
                            <ValidationMessage For="@(() => NewEvent.SubTitle)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tipo de Evento</label>
                            <InputSelect class="form-select" @bind-Value="NewEvent.EventTypeId">
                                <option value="">-- Selecciona un tipo de Evento --</option>
                                @if (EventTypes != null)
                                {
                                    @foreach (var type in EventTypes)
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => NewEvent.EventTypeId)" />
                        </div>
                        <div class=" mb-3 row">
                            <div class="col-auto">
                                <label class="form-label">Fecha</label>
                                <InputDate class="form-control" @bind-Value="NewEvent.Date" />
                                <ValidationMessage For="@(() => NewEvent.Date)" />
                            </div>

                            <div class="col-auto">
                                <label class="form-label">Hora</label>
                                <InputTime CssClass="form-control" @bind-Value="NewEvent.Time" />
                            </div>

                        </div>

                        <div class="mb-3">
                            <label class="form-label">URL</label>
                            <InputText class="form-control" @bind-Value="NewEvent.Url" />
                        </div>
                        <div class=" mb-3 row">

                            <div class="col-auto">
                                <label class="form-label">Anfitrión</label>
                                <InputText class="form-control" @bind-Value="NewEvent.Host" />
                            </div>

                            <div class="col-auto">
                                <label class="form-label">Teléfono Anfitrión</label>
                                <InputText class="form-control" @bind-Value="NewEvent.HostPhone" />
                            </div>
                        </div>
                        <div class=" mb-3 row">
                            <div class="col-auto">
                                <label class="form-label">Planner</label>
                                <InputText class="form-control" @bind-Value="NewEvent.Planner" />
                            </div>

                            <div class="col-auto">
                                <label class="form-label">Teléfono Planner</label>
                                <InputText class="form-control" @bind-Value="NewEvent.PlannerPhone" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Estado</label>
                            <InputSelect class="form-select" @bind-Value="NewEvent.Status">
                                <option value="">-- Selecciona un Estado --</option>
                                @foreach (var status in Enum.GetValues<Status>())
                                {
                                    <option value="@status">@status.GetDescription()</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => NewEvent.Status)" />
                        </div>
                        



                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">
                                 Guardar
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                 Cancelar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}