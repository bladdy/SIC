@page "/events"
<PageTitle>Eventos</PageTitle>
<h3 class="mb-2">Eventos</h3>

<div class="mb-3">
    <button class="btn btn-custom" @onclick="ShowCreateModal">
        Crear Evento
    </button>
</div>
<div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center; gap: 10px;">
    <!-- Buscar por texto -->
    <input style="width:400px;" type="text" class="form-control focus:border-[#3C6A79]" placeholder="Buscar Evento..." @bind="Filter" />

    <!-- Fecha -->
    <InputDate class="form-control" @bind-Value="DateSelectd" style="width:150px;" />

    <!-- Tipo de Evento -->
    <InputSelect class="form-select" @bind-Value="SelectedEventType" style="width:300px;">
        <option value="">-- Selecciona un tipo de Evento --</option>
        @if (EventTypes != null)
        {
            @foreach (var type in EventTypes)
            {
                <option value="@type.Id">@type.Name</option>
            }
        }
    </InputSelect>

    <!-- Orden -->
    <InputSelect class="form-select" @bind-Value="OrderBy" style="width:200px;">
        <option value="">-- Ordernar por --</option>
        <option value="FechaAsc">Fecha Ascendente </option>
        <option value="FechaDesc">Fecha Descendente</option>
        <option value="Nombre">Nombre Alfabetico</option>
        <option value="Evento">Tipo de Evento</option>
        <option value="Estado">Estado</option>
    </InputSelect>

    <!-- Botones -->
    <button type="button" class="btn btn-custom" @onclick="ApplyFilterAsync">
        <i class="bi bi-funnel" /> Filtrar
    </button>
    <button type="button" class="btn btn-custom" @onclick="CleanFilterAsync">
        <i class="bi bi-x-circle" /> Limpiar
    </button>
</div>

<GenericList MyList="Events">
    <Body>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead style="background-color:#3C6A79; color:white;">
                    <tr class="text-center">
                        <th class="text-start">Detalle del Evento</th>
                        <th>Estado</th>
                        <th>Fecha y Hora</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Events != null && Events.Any())
                    {
                        @foreach (var even in Events)
                        {
                            <tr class="border-top">
                                <!-- ======== COLUMNA 1: INFORMACIÓN GENERAL ======== -->
                                <td style="white-space: normal; vertical-align: top;">
                                    <div class="container-fluid">
                                        <div class="row g-3 small text-secondary">

                                            <!-- ===== COLUMNA 1 ===== -->
                                            <div class="col-md-4 d-flex flex-column">
                                                <div class="fw-bold fs-6 text-dark mb-1">
                                                    @even.Name
                                                </div>

                                                @if (!string.IsNullOrWhiteSpace(even.SubTitle))
                                                {
                                                    <div class="text-muted small mb-2">
                                                        @even.SubTitle
                                                    </div>
                                                }

                                                <div class="mb-2">
                                                    <strong>Código:</strong>
                                                    <a href="/events/details/@even.Code" class="text-decoration-none text-primary">
                                                        @even.Code
                                                    </a>
                                                </div>

                                                <div>
                                                    <strong>Tipo:</strong> @even.EventType!.Name
                                                </div>
                                            </div>

                                            <!-- ===== COLUMNA 2 ===== -->
                                            <div class="col-md-4 d-flex flex-column">
                                                <div class="mb-2">
                                                    <i class="bi bi-geo-alt-fill me-1 text-primary"></i>
                                                    <a href="@even.Ubication" target="_blank" class="text-decoration-none text-secondary">
                                                        Ubicación
                                                    </a>
                                                </div>

                                                <div class="mb-2">
                                                    <i class="bi bi-link-45deg me-1 text-primary"></i>
                                                    <a href="@even.Url" target="_blank" class="text-decoration-none text-secondary">
                                                        Invitación
                                                    </a>
                                                </div>

                                                <div class="mb-2">
                                                    <i class="bi bi-person-fill me-1 text-primary"></i>
                                                    <strong>Anfitrión:</strong> @even.Host
                                                </div>

                                                <div>
                                                    <i class="bi bi-telephone-fill me-1 text-secondary"></i>
                                                    @even.HostPhone
                                                </div>
                                            </div>

                                            <!-- ===== COLUMNA 3 ===== -->
                                            <div class="col-md-4 d-flex flex-column">
                                                <div class="mb-2">
                                                    <i class="bi bi-person-badge-fill me-1 text-primary"></i>
                                                    <strong>Planner:</strong> @even.Planner
                                                </div>

                                                <div class="mb-2">
                                                    <i class="bi bi-telephone-fill me-1 text-secondary"></i>
                                                    @even.PlannerPhone
                                                </div>

                                                <div class="mt-2">
                                                    <strong>Fecha:</strong> @even.Date.ToString("dd/MM/yyyy")
                                                </div>

                                                <div>
                                                    <strong>Hora:</strong> @DateTime.Today.Add(even.Time).ToString("hh:mm tt")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>


                                <!-- ======== COLUMNA 2: ESTADO ======== -->
                                <td class="text-center">
                                    <span class="px-3 py-2 fs-6 badge bg-@(even.Status == Status.Active ? "success" : even.Status == Status.Cancelled ? "danger" : "secondary")">
                                        @even.Status.GetDescription()
                                    </span>
                                </td>

                                <!-- ======== COLUMNA 3: FECHA ======== -->
                                <td class="text-center">
                                    <div class="fw-semibold text-dark">
                                        @even.Date.ToString("dd/MM/yyyy")
                                    </div>
                                    <div class="text-muted small">
                                        @DateTime.Today.Add(even.Time).ToString("hh:mm tt")
                                    </div>
                                </td>

                                <!-- ======== COLUMNA 4: ACCIONES ======== -->
                                <td class="text-center">
                                    <button class="btn btn-sm btn-custom" @onclick="() => ShowEditModal(even)">
                                        <i class="bi bi-pencil-fill"></i>
                                    </button>

                                    <button class="btn btn-sm btn-custom" @onclick="() => ConfirmDelete(even)">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No hay eventos registrados.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </Body>
</GenericList>

<!-- paginacion-->
<div class="d-flex justify-content-center my-3">
    <Pagination CurrentPage="currentPage"
                TotalPages="totalPages"
                SelectedPage="SelectedPageAsync" />

</div>

<!-- Modal-->
@if (IsModalVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @((IsEditMode ? $"Editar Evento: {@NewEvent.Code}": "Crear Evento"))</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@NewEvent" OnValidSubmit="@SaveEvent">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        

                        <div class="mb-3">
                            <label class="form-label">Título</label>
                            <InputText class="form-control" @bind-Value="NewEvent.Name" />
                            <ValidationMessage For="@(() => NewEvent.Name)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Sub-Título</label>
                            <InputText class="form-control" @bind-Value="NewEvent.SubTitle" />
                            <ValidationMessage For="@(() => NewEvent.SubTitle)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tipo de Evento</label>
                            <InputSelect class="form-select" @bind-Value="NewEvent.EventTypeId">
                                <option value="">-- Selecciona un tipo de Evento --</option>
                                @if (EventTypes != null)
                                {
                                    @foreach (var type in EventTypes)
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => NewEvent.EventTypeId)" />
                        </div>
                        <div class="mb-3 row">
                            <div class="col-auto">
                                <label class="form-label">Fecha</label>
                                <InputDate class="form-control" @bind-Value="NewEvent.Date" />
                                <ValidationMessage For="@(() => NewEvent.Date)" />
                            </div>

                            <div class="col-auto">
                                <label class="form-label">Hora</label>
                                <InputTime CssClass="form-control" @bind-Value="NewEvent.Time" />
                            </div>

                        </div>

                        <div class="mb-3">
                            <label class="form-label">URL</label>
                            <InputText class="form-control" @bind-Value="NewEvent.Url" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ubicacion</label>
                            <InputText class="form-control" @bind-Value="NewEvent.Ubication" />
                        </div>
                        <div class="mb-3 row">

                            <div class="col-auto">
                                <label class="form-label">Anfitrión</label>
                                <InputText class="form-control" @bind-Value="NewEvent.Host" />
                            </div>

                            <div class="col-auto">
                                <label class="form-label">Teléfono Anfitrión</label>
                                <InputText class="form-control" @bind-Value="NewEvent.HostPhone" />
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-auto">
                                <label class="form-label">Planner</label>
                                <InputText class="form-control" @bind-Value="NewEvent.Planner" />
                            </div>

                            <div class="col-auto">
                                <label class="form-label">Teléfono Planner</label>
                                <InputText class="form-control" @bind-Value="NewEvent.PlannerPhone" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Estado</label>
                            <InputSelect class="form-select" @bind-Value="NewEvent.Status">
                                <option value="">-- Selecciona un Estado --</option>
                                @foreach (var status in Enum.GetValues<Status>())
                                {
                                    <option value="@status">@status.GetDescription()</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => NewEvent.Status)" />
                        </div>
                        <!--Inhabilitar los botones hasta que termine de enviar-->
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-custom">
                                 Guardar
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                 Cancelar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}
